---
import { range } from '@utils/index';

// Layouts
import BaseLayout from '@/layouts/BaseLayout.astro';

// Components
import Slideshow from '@/components/Slideshow.astro';

// Constants
const WOCC_CURRENT_YEAR: number = 2025;
---

<BaseLayout title="Home">
	<!-- Picture slideshow, for internal links please wrapped with `wrapBase` -->
	<!-- function to get the correct link, otherwise directly listing it -->
  <Slideshow
    list={[
      'https://www.wocc.org/wocc2024/images/HoHotel.jpg',
      'https://www.wocc.org/wocc2024/images/m_2.jpg',
      'https://www.wocc.org/wocc2024/images/m_1.jpg'
    ]}
  />

	<!-- News section -->
	<h1>News</h1>

	<!-- Important dates section, make sure table header is left aligned -->
	<h1>Important Dates</h1>
	<div class="table-wrapper">
		<table>
			<tbody>
				<tr>
					<th align="left">Full Paper Submission deadline</th>
					<td>May 31, 2024 (Extended)</td>
				</tr>
				<tr>
					<th align="left">Notification of Acceptance</th>
					<td>June 10, 2024</td>
				</tr>
				<tr>
					<th align="left">Registration Starts</th>
					<td>June 10, 2024</td>
				</tr>
				<tr>
					<th align="left">Camera-Ready</th>
					<td>June 20, 2024</td>
				</tr>
				<tr>
					<th align="left">Online Registration Closed</th>
					<td>August 30, 2024</td>
				</tr>
			</tbody>
		</table>
	</div>

	<!-- Past event section, automatically generated, no need to modify, just -->
	<!-- update the `WOCC_CURRENT_YEAR` above is ok -->
  <h1>Past Events</h1>
  <div class="flex flex-wrap">
    {
      range(1999, WOCC_CURRENT_YEAR - 1)
        .toReversed()
        .map((yr: number) => (
          <a
            href={`https://www.wocc.org/wocc${yr}`}
            rel="noopener noreferer"
            target="_blank"
            class="mx-1">
            {yr}
          </a>
        ))
    }
  </div>
</BaseLayout>
