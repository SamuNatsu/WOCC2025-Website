---
// Types
type Props = { name: string; affiliation: string; image: string };

// Injects
const { name, affiliation, image } = Astro.props;
---

<div class="flex flex-col gap-4 items-center my-4 sm:flex-row">
  <img alt={name} class="h-32 w-32" src={image} />
  <div class="text-center sm:text-left">
    <h2 class="font-bold">{name}</h2>
    <p>{affiliation}</p>
  </div>
</div>
