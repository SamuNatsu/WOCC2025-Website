---
// Types
type Props = {
  name: string;
  title: string;
  affiliation: string;
  speechTitle: string;
  image: string;
};

// Injects
const { name, title, affiliation, speechTitle, image } = Astro.props;
---

<div class="flex flex-col gap-4 items-center my-4 sm:flex-row">
  <img alt={name} class="h-48 w-48" src={image} />
  <div class="text-center sm:text-left">
    <h2 class="font-bold">{name} <span class="font-normal italic text-sm">{title}</span></h2>
    <p>{affiliation}</p>
    <p class="mt-2"><b>Title: </b>{speechTitle}</p>
  </div>
</div>
